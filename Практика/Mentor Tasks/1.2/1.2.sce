function y = f(x)
    y = 2 - x - log(x);
endfunction

// Використовуємо fsolve для знаходження кореня рівняння
x0 = 1,5; // початкове наближення
[x, info] = fsolve(x0, f);

// Виводимо результат
disp("Чисельний розвязок рівняння 2 - x = ln(x):");
disp(x);

// Перевірка результату
disp("Перевірка:");
disp(f(x));
